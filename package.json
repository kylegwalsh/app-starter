{
  "name": "my-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "sst dev",
    "backend": "pnpm --filter backend",
    "web": "pnpm --filter web",
    "build": "sst build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "postinstall": "manypkg fix",
    "prepare": "husky",
    "precommit": "pnpm lint-staged"
  },
  "devDependencies": {
    "@lib/eslint": "workspace:*",
    "@lib/tsconfig": "workspace:*",
    "@manypkg/cli": "^0.24.0",
    "@pulumi/aws": "^6.80.0",
    "@types/aws-lambda": "8.10.149",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "prettier": "^3.5.1",
    "sst": "3.14.12",
    "turbo": "^2.5.3",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm exec eslint --fix",
      "pnpm exec prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "pnpm exec prettier --write"
    ]
  }
}
