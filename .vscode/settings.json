{
  // Controls default AWS profile to use (configured in your .aws/credentials)
  "terminal.integrated.env.osx": {
    "AWS_PROFILE": "odin"
  },
  "terminal.integrated.env.windows": {
    "AWS_PROFILE": "odin"
  },
  // Improves performance of search in large projects
  "search.followSymlinks": false,
  // Excludes files from being shown in the file explorer
  "files.exclude": {
    "**/.DS_Store": true
  },
  // Excludes files from being watched by the file watcher
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/**": true
  },
  // Saving and formatting settings
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.validate": ["javascript", "javascriptreact", "html", "typescriptreact", "typescript"],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Tailwind settings
  "tailwindCSS.experimental.configFile": "packages/design/styles/globals.css",
  // TypeScript settings
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  // Spell checker settings
  "cSpell.words": [
    "authed",
    "autodocs",
    "deepmerge",
    "hookform",
    "ingestor",
    "libquery",
    "lightbox",
    "manypkg",
    "networkidle",
    "nextjs",
    "ohash",
    "openai",
    "posthog",
    "serviceworker",
    "shadcn",
    "sonner",
    "Supabase",
    "superjson",
    "TRPC",
    "typecheck",
    "unauthed"
  ]
}
