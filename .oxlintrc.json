{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "unicorn",
    "typescript",
    "react",
    "react-perf",
    "vitest",
    "jest",
    "jsx-a11y",
    "promise",
    "import",
    "nextjs",
    "oxc"
  ],
  "overrides": [
    // Disable console logs in main backend files (should use logging package)
    {
      "files": ["apps/backend/**/*"],
      "rules": {
        "no-console": "warn"
      }
    },
    {
      "files": ["apps/backend/scripts/**/*"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "ignorePatterns": ["**/sst-env.d.ts"],
  "rules": {
    // --- ESLint recommended rules ---
    "eslint/no-constant-condition": "warn",
    "eslint/no-await-in-loop": "warn",
    "eslint/no-unused-vars": [
      "warn",
      {
        "ignoreRestSiblings": true,
        "destructuredArrayIgnorePattern": "^_$"
      }
    ],
    "eslint/no-debugger": "error",
    "eslint/no-else-return": "warn",
    "eslint/curly": "error",
    "eslint/no-constant-binary-expression": "error",
    "eslint/no-useless-rename": "error",
    "eslint/no-useless-call": "error",

    // --- Oxlint recommended rules ---
    "oxc/no-accumulating-spread": "error",

    // --- Unicorn recommended rules ---
    "unicorn/no-useless-spread": "error",
    "unicorn/no-useless-fallback-in-spread": "error",
    "unicorn/catch-error-name": "warn",
    "unicorn/error-message": "warn",
    "unicorn/no-thenable": "warn",
    "unicorn/no-useless-promise-resolve-reject": "warn",
    "unicorn/prefer-type-error": "warn",
    "unicorn/throw-new-error": "warn",
    "unicorn/no-useless-error-capture-stack-trace": "warn",
    "unicorn/no-array-callback-reference": "warn",
    "unicorn/no-array-for-each": "warn",
    "unicorn/no-array-method-this-argument": "warn",
    "unicorn/no-array-reverse": "warn",
    "unicorn/no-array-sort": "warn",
    "unicorn/no-await-in-promise-methods": "warn",
    "unicorn/no-magic-array-flat-depth": "warn",
    "unicorn/no-new-array": "warn",
    "unicorn/no-single-promise-in-promise-methods": "warn",
    "unicorn/no-unnecessary-array-flat-depth": "warn",
    "unicorn/no-unnecessary-array-splice-count": "warn",
    "unicorn/no-unreadable-array-destructuring": "warn",
    "unicorn/no-useless-collection-argument": "warn",
    "unicorn/prefer-array-find": "warn",
    "unicorn/prefer-array-flat": "warn",
    "unicorn/prefer-array-flat-map": "warn",
    "unicorn/prefer-array-index-of": "warn",
    "unicorn/prefer-array-some": "warn",
    "unicorn/prefer-set-has": "warn",
    "unicorn/prefer-set-size": "warn",
    "unicorn/prefer-spread": "warn",
    "unicorn/require-array-join-separator": "warn",
    "unicorn/consistent-empty-array-spread": "warn",
    "unicorn/consistent-existence-index-check": "warn",
    "unicorn/escape-case": "warn",
    "unicorn/no-hex-escape": "warn",
    "unicorn/prefer-code-point": "warn",
    "unicorn/prefer-includes": "warn",
    "unicorn/prefer-string-replace-all": "warn",
    "unicorn/prefer-string-slice": "warn",
    "unicorn/prefer-string-starts-ends-with": "warn",
    "unicorn/prefer-string-trim-start-end": "warn",
    "unicorn/text-encoding-identifier-case": "warn",
    "unicorn/no-zero-fractions": "warn",
    "unicorn/number-literal-case": "warn",
    "unicorn/numeric-separators-style": "warn",
    "unicorn/prefer-bigint-literals": "warn",
    "unicorn/prefer-math-min-max": "warn",
    "unicorn/prefer-math-trunc": "warn",
    "unicorn/prefer-modern-math-apis": "warn",
    "unicorn/prefer-number-properties": "warn",
    "unicorn/require-number-to-fixed-digits-argument": "warn",
    "unicorn/no-document-cookie": "warn",
    "unicorn/no-invalid-remove-event-listener": "warn",
    "unicorn/prefer-add-event-listener": "warn",
    "unicorn/prefer-blob-reading-methods": "warn",
    "unicorn/prefer-classlist-toggle": "warn",
    "unicorn/prefer-dom-node-append": "warn",
    "unicorn/prefer-dom-node-dataset": "warn",
    "unicorn/prefer-dom-node-remove": "warn",
    "unicorn/prefer-dom-node-text-content": "warn",
    "unicorn/prefer-keyboard-event-key": "warn",
    "unicorn/prefer-modern-dom-apis": "warn",
    "unicorn/prefer-query-selector": "warn",
    "unicorn/consistent-assert": "warn",
    "unicorn/consistent-date-clone": "warn",
    "unicorn/empty-brace-spaces": "warn",
    "unicorn/filename-case": ["error", "kebabCase"],
    "unicorn/new-for-builtins": "warn",
    "unicorn/no-accessor-recursion": "warn",
    "unicorn/no-anonymous-default-export": "warn",
    "unicorn/no-await-expression-member": "warn",
    "unicorn/no-console-spaces": "warn",
    "unicorn/no-empty-file": "warn",
    "unicorn/no-immediate-mutation": "warn",
    "unicorn/no-instanceof-builtins": "warn",
    "unicorn/no-invalid-fetch-options": "warn",
    "unicorn/no-lonely-if": "warn",
    "unicorn/no-negation-in-equality-check": "warn",
    "unicorn/no-nested-ternary": "warn",
    "unicorn/no-new-buffer": "warn",
    "unicorn/no-object-as-default-parameter": "warn",
    "unicorn/no-static-only-class": "warn",
    "unicorn/no-this-assignment": "warn",
    "unicorn/no-unnecessary-await": "warn",
    "unicorn/no-unnecessary-slice-end": "warn",
    "unicorn/no-unreadable-iife": "warn",
    "unicorn/no-useless-switch-case": "warn",
    "unicorn/no-useless-undefined": "warn",
    "unicorn/prefer-at": "warn",
    "unicorn/prefer-class-fields": "warn",
    "unicorn/prefer-date-now": "warn",
    "unicorn/prefer-default-parameters": "warn",
    "unicorn/prefer-event-target": "warn",
    "unicorn/prefer-logical-operator-over-ternary": "warn",
    "unicorn/prefer-native-coercion-functions": "warn",
    "unicorn/prefer-negative-index": "warn",
    "unicorn/prefer-node-protocol": "warn",
    "unicorn/prefer-object-from-entries": "warn",
    "unicorn/prefer-optional-catch-binding": "warn",
    "unicorn/prefer-prototype-methods": "warn",
    "unicorn/prefer-reflect-apply": "warn",
    "unicorn/prefer-regexp-test": "warn",
    "unicorn/prefer-response-static-json": "warn",
    "unicorn/prefer-string-raw": "warn",
    "unicorn/prefer-structured-clone": "warn",
    "unicorn/prefer-top-level-await": "warn",
    "unicorn/switch-case-braces": "warn",

    // --- Import recommended rules ---
    "import/default": "warn",
    "import/namespace": "warn",
    "import/no-named-as-default": "warn",
    "import/no-named-as-default-member": "warn",
    "import/no-duplicates": "error",
    "import/no-self-import": "error",
    "import/no-cycle": "warn",
    "import/first": "warn",
    "import/no-mutable-exports": "warn",
    "import/no-amd": "error",
    "import/no-empty-named-blocks": "warn",
    "import/no-absolute-path": "error",
    "import/no-webpack-loader-syntax": "error",
    "import/no-dynamic-require": "warn",

    // --- React recommended rules ---
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-curly-brace-presence": [
      "error",
      {
        "props": "never",
        "children": "never",
        "propElementValues": "always"
      }
    ],
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    "react/display-name": "error",
    "react/jsx-key": "error",
    "react/jsx-no-comment-textnodes": "error",
    "react/jsx-no-duplicate-props": "error",
    "react/jsx-no-target-blank": "error",
    "react/jsx-no-undef": "error",
    "react/no-children-prop": "error",
    "react/no-danger-with-children": "error",
    "react/no-direct-mutation-state": "error",
    "react/no-find-dom-node": "error",
    "react/no-is-mounted": "error",
    "react/no-render-return-value": "error",
    "react/no-string-refs": "error",
    "react/no-unknown-property": "error",

    // --- React Hooks recommended rules ---
    "react-hooks/rules-of-hooks": "error",

    // --- React Perf recommended rules ---
    "react_perf/jsx-no-new-object-as-prop": "error",
    "react_perf/jsx-no-new-array-as-prop": "error",
    "react_perf/jsx-no-new-function-as-prop": "error",

    // --- TypeScript recommended rules ---
    "typescript/no-inferrable-types": "warn",
    "typescript/prefer-ts-expect-error": "error",
    "typescript/no-explicit-any": "warn",
    "typescript/ban-ts-comment": "error",
    "typescript/no-duplicate-enum-values": "error",
    "typescript/no-empty-object-type": "error",
    "typescript/no-extra-non-null-assertion": "error",
    "typescript/no-misused-new": "error",
    "typescript/no-namespace": "error",
    "typescript/no-non-null-asserted-optional-chain": "error",
    "typescript/no-require-imports": "error",
    "typescript/no-this-alias": "error",
    "typescript/no-unnecessary-type-constraint": "error",
    "typescript/no-unsafe-declaration-merging": "error",
    "typescript/no-unsafe-function-type": "error",
    "typescript/no-wrapper-object-types": "error",
    "typescript/prefer-as-const": "error",
    "typescript/prefer-namespace-keyword": "error",
    "typescript/no-unsafe-assignment": "warn",
    "typescript/no-unsafe-member-access": "warn",
    "typescript/no-floating-promises": "off",

    // --- Vitest recommended rules ---
    "vitest/no-import-node-test": "error",
    "vitest/no-unneeded-async-expect-function": "error",
    "vitest/require-local-test-context-for-concurrent-snapshots": "error",
    // Vitest recommended rules available under jest/ namespace
    "jest/expect-expect": "error",
    "jest/no-conditional-expect": "error",
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-commented-out-tests": "error",
    "jest/no-identical-title": "error",
    "jest/no-interpolation-in-snapshots": "error",
    "jest/no-mocks-import": "error",
    "jest/no-standalone-expect": "error",
    "jest/valid-describe-callback": "error",
    "jest/valid-expect": "error",
    "jest/valid-title": "error",

    // --- JSX A11y recommended rules ---
    "jsx_a11y/alt-text": "error",
    "jsx_a11y/anchor-has-content": "error",
    "jsx_a11y/anchor-is-valid": "error",
    "jsx_a11y/aria-activedescendant-has-tabindex": "error",
    "jsx_a11y/aria-props": "error",
    "jsx_a11y/aria-proptypes": "error",
    "jsx_a11y/aria-role": "error",
    "jsx_a11y/aria-unsupported-elements": "error",
    "jsx_a11y/autocomplete-valid": "error",
    "jsx_a11y/click-events-have-key-events": "error",
    "jsx_a11y/heading-has-content": "error",
    "jsx_a11y/html-has-lang": "error",
    "jsx_a11y/iframe-has-title": "error",
    "jsx_a11y/img-redundant-alt": "error",
    "jsx_a11y/label-has-associated-control": "error",
    "jsx_a11y/media-has-caption": "error",
    "jsx_a11y/mouse-events-have-key-events": "error",
    "jsx_a11y/no-access-key": "error",
    "jsx_a11y/no-autofocus": "error",
    "jsx_a11y/no-distracting-elements": "error",
    "jsx_a11y/no-noninteractive-tabindex": "error",
    "jsx_a11y/no-redundant-roles": "error",
    "jsx_a11y/role-has-required-aria-props": "error",
    "jsx_a11y/role-supports-aria-props": "error",
    "jsx_a11y/scope": "error",
    "jsx_a11y/tabindex-no-positive": "error",

    // --- Promise recommended rules ---
    "promise/always-return": "error",
    "promise/no-return-wrap": "error",
    "promise/param-names": "error",
    "promise/catch-or-return": "error",
    "promise/no-new-statics": "error",
    "promise/no-nesting": "warn",
    "promise/no-promise-in-callback": "warn",
    "promise/no-callback-in-promise": "warn",
    "promise/valid-params": "warn",

    // --- Next.js recommended rules ---
    "nextjs/inline-script-id": "error",
    "nextjs/no-assign-module-variable": "error",
    "nextjs/no-document-import-in-page": "error",
    "nextjs/no-duplicate-head": "error",
    "nextjs/no-head-import-in-document": "error",
    "nextjs/no-script-component-in-head": "error",
    "nextjs/google-font-display": "warn",
    "nextjs/google-font-preconnect": "warn",
    "nextjs/next-script-for-ga": "warn",
    "nextjs/no-async-client-component": "warn",
    "nextjs/no-before-interactive-script-outside-document": "warn",
    "nextjs/no-css-tags": "warn",
    "nextjs/no-head-element": "warn",
    "nextjs/no-html-link-for-pages": "warn",
    "nextjs/no-img-element": "warn",
    "nextjs/no-page-custom-font": "warn",
    "nextjs/no-styled-jsx-in-document": "warn",
    "nextjs/no-sync-scripts": "warn",
    "nextjs/no-title-in-document-head": "warn",
    "nextjs/no-typos": "warn",
    "nextjs/no-unwanted-polyfillio": "warn"
  }
  // Old eslint next config
