{
  "name": "@repo/storybook",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "storybook build",
    "dev": "storybook dev -p 6006",
    "test": "sst shell -- vitest",
    "test:ci": "sst shell --stage ci -- vitest run",
    "test:ui": "sst shell  -- vitest --ui",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "pretty": "prettier --write . --ignore-path ../../.prettierignore",
    "format": "pnpm lint:fix & pnpm pretty",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/design": "workspace:*",
    "lucide-react": "^0.475.0",
    "next": "15.3.1",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@mdx-js/react": "^3.1.0",
    "@repo/eslint": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@storybook/addon-a11y": "9.0.3",
    "@storybook/addon-docs": "9.0.3",
    "@storybook/addon-themes": "9.0.3",
    "@storybook/addon-vitest": "9.0.3",
    "@storybook/nextjs-vite": "9.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/browser": "^3.1.4",
    "@vitest/coverage-v8": "^3.1.4",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "storybook": "9.0.3",
    "storybook-addon-test-codegen": "^1.3.4",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
