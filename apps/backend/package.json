{
  "name": "@repo/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun db:start\" \"vercel dev\" --kill-others-on-fail",
    "deploy": "bun db:generate && vercel deploy",
    "deploy:prod": "bun db:generate && vercel deploy --prod",
    "test": "vitest run",
    "test:ci": "cross-env LOG_LEVEL=silent vitest run --silent",
    "test:ui": "vitest --ui",
    "auth:generate": "bunx @better-auth/cli generate --config ./core/auth.ts --output ./db/schema.prisma",
    "db:start": "bun db:get-url \"prisma db push && prisma studio --browser none\"",
    "db:push": "bun db:get-url \"prisma db push\"",
    "db:migrate": "tsx ./scripts/migrations/create-migration.ts",
    "db:migrate:deploy": "bun db:get-url \"prisma migrate deploy\"",
    "db:migrate:validate": "bun db:get-url \"tsx ./scripts/migrations/validate-migration.ts\"",
    "db:studio": "bun db:get-url \"prisma studio\"",
    "db:generate": "prisma generate",
    "db:get-url": "tsx ./scripts/get-deb-url.ts",
    "env:add": "tsx ./scripts/env/add-env.ts",
    "env:pull": "tsx ./scripts/env/pull-env.ts",
    "lint": "ultracite check .",
    "lint:fix": "ultracite fix .",
    "types:check": "tsc --noEmit",
    "types:generate": "tsc --emitDeclarationOnly",
    "update-readme": "doctoc README.md",
    "postinstall": "bun db:generate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "24.10.1",
    "sqlite3": "5.1.7"
  },
  "dependencies": {
    "@better-auth/stripe": "1.4.2",
    "@orpc/server": "1.12.3",
    "@prisma/client": "6.7.0",
    "@repo/ai": "workspace:*",
    "@repo/analytics": "workspace:*",
    "@repo/config": "workspace:*",
    "@repo/constants": "workspace:*",
    "@repo/email": "workspace:*",
    "@repo/logs": "workspace:*",
    "@repo/utils": "workspace:*",
    "better-auth": "1.4.2",
    "hono": "4.8.4",
    "nanoid": "5.1.6",
    "prisma": "6.7.0",
    "stripe": "18.4.0",
    "superjson": "2.2.2",
    "zod": "3.25.49"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  }
}
