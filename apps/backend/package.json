{
  "name": "@repo/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "sst dev",
    "build": "sst build",
    "deploy": "sst deploy",
    "test": "sst shell vitest run",
    "test:ui": "sst shell vitest --ui",
    "remove": "sst remove",
    "console": "sst console",
    "db:start": "pnpm db:get-url \"npx prisma db push && npx prisma studio --browser none\"",
    "db:push": "pnpm db:get-url \"npx prisma db push\"",
    "db:studio": "pnpm db:get-url \"npx prisma db push && npx prisma studio\"",
    "db:generate": "npx prisma generate",
    "db:get-url": "tsx ./scripts/get-deb-url.ts",
    "add-secret": "tsx ./scripts/add-secret.ts",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "pretty": "prettier --write . --ignore-path ../../.prettierignore",
    "format": "pnpm lint:fix & pnpm pretty",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^20",
    "sqlite3": "^5.1.7"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@repo/analytics": "workspace:*",
    "@repo/config": "workspace:*",
    "@repo/constants": "workspace:*",
    "@repo/utils": "workspace:*",
    "@trpc/server": "^11.1.2",
    "better-trpc-openapi": "github:deldrid1/trpc-openapi#d089373012300ea432f4177543d3e85fe59d8a9a",
    "prisma": "^6.7.0",
    "sst": "3.14.27",
    "superjson": "^2.2.2",
    "zod": "^3.24.2"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  }
}
